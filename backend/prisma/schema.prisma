generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  discordId    String   @unique
  username     String
  avatar       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  email        String?
  accessToken  String?
  refreshToken String?
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String?
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Product {
  id    Int     @id @default(autoincrement())
  image String
  title String
  price Decimal @db.Decimal(10, 2)
}

model Rank {
  id    Int     @id @default(autoincrement())
  image String
  title String
  price Decimal @db.Decimal(10, 2)
}
